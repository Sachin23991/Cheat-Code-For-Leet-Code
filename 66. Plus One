IN CPP

class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
            // Start from the rightmost digit
            int n = digits.size();
    for(int i = n - 1; i >= 0; i--){
        // If the current digit is not 9, simply increment it by 1 and return
        if(digits[i] != 9){
            digits[i]++;
            return digits;
        }
        // If the current digit is 9, set it to 0 and continue to the next digit
        digits[i] = 0;
    }
    
    // If all digits were 9, we need to add an additional digit at the beginning
    digits.insert(digits.begin(), 1);
    
    return digits;
}
    
};







IN PYTHON


class Solution(object):
    def plusOne(self, digits):
        """
        :type digits: List[int]
        :rtype: List[int]
        """
        num = 0
        for d in digits:
            num = num * 10 + d
        
        # Add one
        num += 1
        
        # Convert the number back to list of digits
        result = [int(d) for d in str(num)]
        return result
        
